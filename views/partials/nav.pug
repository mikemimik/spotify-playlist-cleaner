//- inside body tag
nav(class='navbar navbar-default navbar-fixed-top')
  div(class='container')
    div(class='navbar-header')
      button(type='button', class='navbar-toggle collapsed', data-toggle='collapse', data-target='#main-navbar-collapse', aria-expanded='false')
        span(class='sr-only') Toggle Navigation
        span(class='icon-bar')
        span(class='icon-bar')
        span(class='icon-bar')
      a(class='navbar-brand', href='/') Playlist Cleaner
    div(class='collapse navbar-collapse', id='main-navbar-collapse')
      ul(class='nav navbar-nav')
        li(class={ active: currentUrl == '/' })
          a(href='/') Home
        if loggedIn
          li(class='dropdown')
            a(href='#', class='dropdown-toggle', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
              span Playlists
              span=' '
              span(class='caret')
            ul(class='dropdown-menu')
              li(class={ active: currentUrl == '/user/' + 'spotify' + '/playlists' })
                a(href='/user/' + 'spotify' + '/playlists') Spotify
              li(class={ active: currentUrl == '/user/' + user.name + '/playlists' })
                a(href='/user/' + user.name + '/playlists') Personal
              li(class={ active: currentUrl == '/playlist/search' })
                a(href='/search') Search
      ul(class='nav navbar-nav navbar-right')
        if loggedIn
          li(class='dropdown')
            a(href='#', class='dropdown-toggle', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
              span(class='label label-info') Logged in as #{user.name}
              span=' '
              span(class='caret')
            ul(class='dropdown-menu')
              li(class='dropdown-header')
                span Menu Items
              li(role='separator', class='divider')
              li(class={ active: currentUrl == '/profile' })
                a(href='/user/' + user.name) Profile
              li()
                a(href='/logout') Logout
        else
          li
            a(href='/authorize') Login
